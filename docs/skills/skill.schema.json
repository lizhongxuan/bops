{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://bops.local/schema/skill.json",
  "title": "BOPS Skill Schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["name", "version", "description", "profile", "executables"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "permissions": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "profile": {
      "type": "object",
      "additionalProperties": false,
      "required": ["role", "instruction"],
      "properties": {
        "role": {
          "type": "string",
          "minLength": 1
        },
        "instruction": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "memory": {
      "type": "object",
      "additionalProperties": false,
      "required": ["strategy", "files"],
      "properties": {
        "strategy": {
          "type": "string",
          "enum": ["context", "rag"]
        },
        "files": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "executables": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "type"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["script", "binary", "mcp"]
          },
          "runner": {
            "type": "string",
            "minLength": 1
          },
          "path": {
            "type": "string",
            "minLength": 1
          },
          "command": {
            "type": "string",
            "minLength": 1
          },
          "args": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "parameters": {
            "type": "object"
          }
        },
        "allOf": [
          {
            "if": { "properties": { "type": { "const": "script" } } },
            "then": { "required": ["runner", "path"] }
          },
          {
            "if": { "properties": { "type": { "const": "binary" } } },
            "then": { "required": ["path"] }
          },
          {
            "if": { "properties": { "type": { "const": "mcp" } } },
            "then": { "required": ["command"] }
          }
        ]
      }
    }
  }
}
